# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/jayandjane
# or for MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/jayandjane

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here

# Cloudinary Configuration for Image Uploads
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Service Configuration
EMAIL_SERVICE_URL=your_email_service_url
ADMIN_EMAIL=admin@jayandjane.com

# Site URL
SITE_URL=http://localhost:3000
# For production: SITE_URL=https://jayandjane.com 